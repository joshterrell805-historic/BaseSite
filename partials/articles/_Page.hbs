<div class='article row small-11 small-centered columns'>
   {{#if notFound}}
      <h1 class='title'>Article Not Found</h1>
      <div class='body'><p>The article you requested could not be
       found.</p></div>
   {{else}}
      {{#if private}}
        <h1 class='title'>Private Article</h1>
        <div class='body'><p>You must be logged in to view
           this article.</p></div>
      {{else}}
        <h1 class='title'>{{title}}</h1>
        <div class='timestamps text-center'><div>Published:
           <span class='timestamp' data-timestamp='{{publishTimestamp}}'></span>
           </div><div>Edited:
           <span class='timestamp' data-timestamp='{{lastEditTimestamp}}'></span>
           </div></div>
        <div class='body'>{{{body}}}</div>
        <p class='text-center'><a href='#page-top'>Top</a></p>
      {{/if}}
   {{/if}}
</div>
