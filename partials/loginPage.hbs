<div class='message row small-11 small-centered columns'>
  <h1 class='title'>Login</h1>
  <div class='body'>
    {{#if errorMessage}}
      <p>{{errorMessage}}</p>
    {{else}}
      {{#if loggedIn}}
        <p>You are logged in.</p>
      {{else}}
        <a href="{{loginUrl}}"><img id="google-plus-signin" src="https://developers.google.com/+/images/branding/sign-in-buttons/Red-signin_Medium_base_44dp.png"></img></a>
      {{/if}}
    {{/if}}
  </div>
</div>
